<%= form_for @catalog, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>
   <div class="control-group">
      <%= f.label :catalog_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :catalog_name, :class => 'text_field' %>
      </div>
    </div>
   
  <div class="control-group">
    <%= f.label :catalog_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:catalog_type, {"邮票" => "stamp", "硬币" => "coin", "纸钞" => "paper"})%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :is_show, :class => 'control-label' %>
  
      <%=f.check_box :is_show,:class =>'check_box', :id =>"isshow"%>
    </div>
  
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <% if can? :index, Catalog%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                catalogs_path, :class => 'btn' %>
    <% end %>
  </div>
<% end %>
