<%= form_for @dic_content, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>
  <% if @edit %>
    <div class="control-group">
      <%= f.label :dic_title_id, :class => 'control-label' %>
      <div class="controls">
        <%= @dic_content.dic_title.name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label "所属商品属性", :class => 'control-label' %>
      <div class="controls">
        <%= DicTitle::CATEGORY[@dic_content.dic_title.category.to_sym]  %>
      </div>
    </div>
    <% else %>
    <div class="control-group">
      <%= f.label :dic_title_id, :class => 'control-label' %>
      <div class="controls">
        <%= DicTitle.find(@dic_title_id).name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label "所属商品属性", :class => 'control-label' %>
      <div class="controls">
        <%= DicTitle::CATEGORY[DicTitle.find(@dic_title_id).category.to_sym]  %>
      </div>
    </div>
    <% end %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :order, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :order, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%=f.check_box :is_show,:class =>'check_box' %>
      <%= f.label :is_show, :class => 'control-label' %>
    </div>
    <%= hidden_field_tag('dic_title_id',@dic_title_id) %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <% if @edit %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  "/dic_titles/#{@dic_content.dic_title_id}/dic_contents", :class => 'btn' %>
      <% else %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  "/dic_titles/#{@dic_title_id}/dic_contents", :class => 'btn' %>
      <% end %>
    </div>
<% end %>
