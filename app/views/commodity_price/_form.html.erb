<%= form_for ([ @commodity, @price]), :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>
    <% if @edit %>
    <div class="control-group">
      <%= f.label :commodity_id, :class => 'control-label' %>
      <div class="controls">
        <%= @price.commodity.name + "-" + @price.commodity.short_name + "-" + @price.commodity.common_name %>
      </div>
    </div>
    <% end %>
    <div class="control-group">
      <%= f.label :price_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :price_date, :value => "#{@price.price_date.blank? ? "" : @price.price_date.strftime('%Y-%m-%d').to_s}" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :price, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :price, :class => 'text_field', :value => "#{number_with_precision(@price.price, precision: 2)}" %>
      </div>
    </div>
    <div class="control-group">
      <%=f.check_box :is_show,:class =>'check_box' %>
      <%= f.label :is_show, :class => 'control-label' %>
    </div>
    <%= hidden_field_tag('commodity_id',@commodity_id) %>
    <!-- <div class="form-actions"> -->
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            commodity_prices_path(@commodity), :class => 'btn btn-default' %>
    <!-- </div> -->
<% end %>
