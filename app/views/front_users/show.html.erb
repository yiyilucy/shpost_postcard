<%- model_class = FrontUser -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @front_user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nickname) %>:</strong></dt>
  <dd><%= @front_user.nickname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @front_user.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @front_user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wechat_id) %>:</strong></dt>
  <dd><%= @front_user.wechat_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= FrontUser::STATUS[@front_user.status.to_sym] %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              front_users_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_front_user_path(@front_user), :class => 'btn btn-default' %>

