<%- model_class = Price -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:commodity_no) %>:</strong></dt>
  <dd><%= @price.commodity.no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price_date) %>:</strong></dt>
  <dd><%= @price.price_date.strftime("%Y-%m-%d") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= number_with_precision(@price.price, precision: 2) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_show) %>:</strong></dt>
  <dd><%= Price::IS_SHOW[price.is_show] %></dd>
</dl>
<% if can? :index, User %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default'  %>
<% end %>
<% if can? :update, @user %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-default' %>
<% end %>
<% if can? :destroy, @user %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('wice_grid.saved_query_deletion_confirmation', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
